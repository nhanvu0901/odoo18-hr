<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="odoo_owl_list.ListView.Buttons" t-inherit="web.ListView.Buttons" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('o_list_buttons')]" position="inside">
            <div t-if="props.resModel == 'hr.payslip'" class="btn-group" role="group">
                <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" data-hotkey="r">
                    Export TNCN
                </button>
                <ul class="dropdown-menu">
                    <li>
                        <a class="dropdown-item" href="#" t-on-click="showKKReport">
                            Export KK-TNCN
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="#" t-on-click="showQTTReport">
                            Export QTT-TNCN
                        </a>
                    </li>
                </ul>
            </div>
        </xpath>
    </t>
</templates>